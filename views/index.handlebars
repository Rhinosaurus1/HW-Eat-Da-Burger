<h1>Burgers!</h1>

<h2>Un-eaten Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.id}}
        {{this.burger_name}}
        <form action="/api/burgers/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit">DEVOUR IT!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.id}}
        {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/api/burgers" method="POST">

  <div class="form-group">
    <label for="Burger">Burger:</label>
    <input type="text" id="Burger" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
